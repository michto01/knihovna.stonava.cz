{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true
    },
    "paths": {
        "~/*": ["./src/*"],
        "@/*": ["./src/*"]
    },
    "include": [
        "./src/**/*",
        "stylelint.config.js"
    ]
}